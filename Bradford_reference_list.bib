	file = {Ravens-Sieberer et al. - 2021 - Impact of the COVID-19 pandemic on quality of life.pdf:C\:\\Users\\maike\\Zotero\\storage\\ADHTYBDL\\Ravens-Sieberer et al. - 2021 - Impact of the COVID-19 pandemic on quality of life.pdf:application/pdf}
