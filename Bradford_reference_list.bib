	journal = {PLOS Medicine},
	author = {Siedner, Mark J. and Harling, Guy and Reynolds, Zahra and Gilbert, Rebecca F. and Haneuse, Sebastien and Venkataramani, Atheendar S. and Tsai, Alexander C.},
