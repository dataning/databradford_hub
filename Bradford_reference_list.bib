	file = {PubMed Central Full Text PDF:C\:\\Users\\maike\\Zotero\\storage\\8JGFKM9X\\Kwong et al. - Mental health before and during the COVID-19 pande.pdf:application/pdf}
}

@article{inkster_early_2021,
	title = {Early {Warning} {Signs} of a {Mental} {Health} {Tsunami}: {A} {Coordinated} {Response} to {Gather} {Initial} {Data} {Insights} {From} {Multiple} {Digital} {Services} {Providers}},
